// C++ code
//
int sensorPin = 0;

void setup()
{
  Serial.print(9600);
}

void loop()
{
  int read = analogRead(sensorPin);// measure the 5V
  
  float voltage = read * 4.68;
  voltage /= 1024.0;
  
  //print out temp
  float temperature = (voltage - 0.5) * 100;
  Serial.print(temperature);
  Serial.println("degree");
    
  delay(1000); // Wait for 1000 millisecond(s)
}
